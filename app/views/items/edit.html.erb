<div class="container d-flex justify-content-center align-items-center min-vh-100 mt-4">
  <div class="row w-100">
    <div class="col-md-8 mx-auto" style="max-width: 800px;">
      <div class="card shadow-lg border-primary rounded-3 p-5">
        <div class="card-body">
          <h1 class="card-title text-center text-primary mb-5 fw-bold">Edit Item</h1>

          <%= form_with model: @item, class: "w-100" do |i| %>
            <div class="mb-4">
              <%= i.label :name, class: "form-label fw-semibold" %>
              <%= i.text_field :name, class: "form-control form-control-lg" %>
            </div>

            <div class="mb-4">
              <%= i.label :description, class: "form-label fw-semibold" %>
              <%= i.text_area :description, class: "form-control form-control-lg", rows: 5 %>
            </div>

            <div class="mb-4">
              <%= i.label :price, "Price (in R$)", class: "form-label fw-semibold" %>
              <%= i.number_field :price, step: 0.01, class: "form-control form-control-lg" %>
            </div>

            <div class="mb-4">
              <%= i.label :categories, class: "form-label fw-semibold" %>
              <%= i.select :categories, options_for_select(["Tools", "SpaceShips", "Consumables"]), prompt: "Select a category", class: "form-select form-select-lg" %>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
              <%= i.submit "Update Item", class: "btn btn-primary btn-lg w-100 shadow-lg" %>
            </div>
          <% end %>
        </div>

        <!-- Back to Marketplace Button -->
        <div class="text-center mt-4">
          <%= link_to "<span class='fw-bold fs-4'>Back to Marketplace</span>".html_safe,
              items_path, class: "btn btn-primary btn-lg w-100 px-5 py-3 shadow-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
