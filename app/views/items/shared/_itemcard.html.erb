<div class="container text-center bg-primary border border-primary m-3 p-3 rounded">
  <div class="container bg-secondary p-3 rounded">
    <h3><%= item.name %></h3>
    <img src="here it goes" alt="nice image" class="img-fluid mb-3">
    <p>Price: <%= number_to_currency(item.price, unit: "R$") %></p>
    <div class="d-flex justify-content-center gap-3">
      <%= link_to "View Details", item_path(item), class: "btn btn-info" %>
      <%= button_to "Delete", item_path(item),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-danger" %>
    </div>
  </div>
</div>
