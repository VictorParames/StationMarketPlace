<a href="<%= item_path(item) %>" style="text-decoration: none !important;">
  <div class="container text-center bg-primary border border-primary m-3" id="itemcard">
    <div class="container bg-secondary">
      <h3><%= item.name %></h3>
      <% if item.categories == "Tools" %>
        <% @image = image_tag("Tools.png") %>
      <% elsif item.categories == "Consumables" %>
        <% @image = image_tag("Consumable.png") %>
      <% else %>
        <% @image = image_tag("Spaceship.png") %>
      <% end %>
      <%= @image %>
      <p>Price: <%= number_to_currency(item.price, unit: "R$") %></p>
      <div class="d-flex justify-content-center gap-3">
      </div>
    </div>
  </div>
</a>
